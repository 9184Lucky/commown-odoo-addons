<?xml version="1.0" encoding="utf-8"?>

<odoo>

  <record id="rental_fees_definition_view_tree" model="ir.ui.view">
    <field name="name">rental.fees.definition.tree</field>
    <field name="model">rental_fees.definition</field>
    <field name="arch" type="xml">
      <tree string="Rental fees definitions">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="product_template_id"/>
        <field name="agreed_to_std_price_ratio"/>
        <field name="order_ids" widget="many2many_tags"/>
      </tree>
    </field>
  </record>

  <record id="rental_fees_definition_view_search" model="ir.ui.view">
    <field name="name">rental_fees.definition.search</field>
    <field name="model">rental_fees.definition</field>
    <field name="arch" type="xml">
      <search string="Rental Fees">
        <field name="partner_id" string="Supplier"/>
        <field name="product_template_id"/>
        <field name="order_ids"/>
      </search>
    </field>
  </record>

  <record id="rental_fees_definition_view_form" model="ir.ui.view">
    <field name="name">rental_fees.definition.form</field>
    <field name="model">rental_fees.definition</field>
    <field name="arch" type="xml">
      <form string="Rental fees definition">
        <sheet>
          <div class="oe_button_box">
            <button
                string="Devices"
                class="oe_stat_button"
                icon="fa-laptop"
                type="object"
                name="button_open_devices"
                />
          </div>
          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name" class="oe_inline"/>
            </h1>
          </div>
          <group name="main">
            <field name="partner_id"/>
            <field name="product_template_id"/>
            <field name="model_invoice_id"/>
            <field name="agreed_to_std_price_ratio"/>
          </group>
          <group name="orders">
            <field name="order_ids" widget="many2many" domain="[('partner_id', '=', partner_id)]" />
          </group>
          <group name="lines">
            <field name="line_ids">
              <tree default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="duration_value"/>
                <field name="duration_unit"/>
                <field name="fees_type"/>
                <field name="monthly_fees"/>
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="rental_fees_definition_line_view_form" model="ir.ui.view">
    <field name="name">rental_fees.definition_line.form</field>
    <field name="model">rental_fees.definition_line</field>
    <field name="arch" type="xml">
      <form string="Rental fees definition line">
        <sheet>
          <field name="sequence" invisible="1"/>
          <group>
            <group name="duration" string="Duration">
              <field name="duration_value"/>
              <field name="duration_unit"/>
            </group>
            <group name="value" string="Fees value">
              <field name="fees_type"/>
              <field name="monthly_fees"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="rental_fees_definitions_action" model="ir.actions.act_window">
    <field name="name">Rental fees definitions</field>
    <field name="res_model">rental_fees.definition</field>
    <field name="view_type">form</field>
    <field name="view_id" ref="rental_fees_definition_view_tree"/>
    <field name="search_view_id" ref="rental_fees_definition_view_search"/>
  </record>

  <menuitem id="menu_rental_fees_definitions_menu"
            action="rental_fees_definitions_action"
            parent="purchase.menu_procurement_management"
            sequence="30"
            />

  <record id="rental_fees_computation_view_tree" model="ir.ui.view">
    <field name="name">rental.fees.computation.tree</field>
    <field name="model">rental_fees.computation</field>
    <field name="arch" type="xml">
      <tree string="Rental fees computations">
        <field name="fees_definition_id"/>
        <field name="until_date"/>
        <field name="fees"/>
        <field name="invoice_ids" widget="many2many_tags"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="rental_fees_computation_view_form" model="ir.ui.view">
    <field name="name">rental_fees.computation.form</field>
    <field name="model">rental_fees.computation</field>
    <field name="arch" type="xml">
      <form string="Rental fees computation">
        <header>
          <button string="Run computation" states="draft" name="action_run" type="object"/>
          <button string="Reset to draft" states="done" name="action_reset" type="object"/>
          <button string="Generate invoice" states="done" name="action_invoice" type="object"/>
          <field name="state" widget="statusbar" readonly="1"/>
        </header>
        <sheet>
          <group name="main">
            <field name="fees_definition_id"/>
            <field name="until_date"/>
          </group>
          <group name="invoices" attrs="{'invisible': [('state', '!=', 'done')]}">
            <field name="invoice_ids"/>
          </group>
          <group name="results" attrs="{'invisible': [('state', '!=', 'done')]}" >
            <field name="fees" readonly="1"/>
            <field name="detail_ids" readonly="1">
              <tree>
                <field name="fees"/>
                <field name="fees_type"/>
                <field name="lot_id"/>
                <field name="contract_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="fees_definition_line_id"/>
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="rental_fees_computations_action" model="ir.actions.act_window">
    <field name="name">Rental fees computations</field>
    <field name="res_model">rental_fees.computation</field>
    <field name="view_type">form</field>
    <field name="view_id" ref="rental_fees_computation_view_tree"/>
  </record>

  <menuitem id="menu_rental_fees_computation_menu"
            action="rental_fees_computations_action"
            parent="account.menu_finance_payables"
            sequence="30"
            />

</odoo>
