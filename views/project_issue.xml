<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="project_issue_form_view">
    <field name="name">contractual.project.issue.form.view</field>
    <field name="model">project.issue</field>
    <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//field[@name='partner_id']" position="after">
          <field name="contract_id" options="{'no_create': True}"
                 domain="[('partner_id', 'parent_of', partner_id)]"/>
      </xpath>
    </field>
  </record>

</odoo>
