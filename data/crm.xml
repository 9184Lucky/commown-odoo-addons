<?xml version="1.0"?>
<odoo>

  <data noupdate="1">

    <record id="urban_mine_managers" model="crm.team">
      <field name="name">Mine urbaine</field>
      <field name="use_leads">False</field>
      <field name="use_opportunities">True</field>
    </record>

    <record id="stage1" model="crm.stage">
      <field name="name">Demande à vérifier</field>
      <field name="requirements">Vérifier qu'il ne s'agit pas d'un spam</field>
      <field name="team_id" ref="urban_mine.urban_mine_managers"/>
      <field name="sequence">1</field>
    </record>

    <record id="stage2" model="crm.stage">
      <field name="name">En attente de l’appareil [urban-mine: send-label]</field>
      <field name="requirements">Un coupon, une auto-facture et une étiquette d'expédition ont été générés et envoyé par mail au partenaire : on attend désormais son appareil.</field>
      <field name="team_id" ref="urban_mine.urban_mine_managers"/>
      <field name="sequence">2</field>
    </record>

    <record id="stage3" model="crm.stage">
      <field name="name">Envoi des chèques [urban-mine: payment]</field>
      <field name="team_id" ref="urban_mine.urban_mine_managers"/>
      <field name="sequence">3</field>
    </record>

    <record id="stage4" model="crm.stage">
      <field name="name">Vente OK</field>
      <field name="requirements">Appareil complet, pas volé, pas dans notre propre base de FP2 ! </field>
      <field name="team_id" ref="urban_mine.urban_mine_managers"/>
      <field name="sequence">4</field>
    </record>

    <record id="stage5" model="crm.stage">
      <field name="name">Tri effectué</field>
      <field name="requirements">Pièces analysées et stockées pour réemploi ou envoyées au recyclage.</field>
      <field name="team_id" ref="urban_mine.urban_mine_managers"/>
      <field name="sequence">5</field>
    </record>

  </data>

</odoo>
