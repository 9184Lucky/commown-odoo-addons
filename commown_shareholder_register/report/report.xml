<odoo>

  <record id="commown_shareholder_register.action_py3o_spreadsheet" model="ir.actions.report">
    <field name="name">[commown] Export to spreadsheet</field>
    <field name="type">ir.actions.report</field>
    <field name="model">commown_shareholder_register.register</field>
    <field name="report_type">py3o</field>
    <field name="report_name">commown_shareholder_register.spreadsheet</field>
    <field name="module">commown_shareholder_register</field>
    <field name="py3o_filetype">ods</field>
    <field name="py3o_template_fallback">report/register.ods</field>
    <field name="attachment_use">False</field>
    <field name="attachment">"Registre_%s.ods" % object.date.strftime("%Y-%m-%d")</field>
    <field name="print_report_name">"Registre_%s.ods" % object.date.strftime("%Y-%m-%d")</field>
  </record>

</odoo>
